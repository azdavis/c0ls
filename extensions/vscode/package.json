{
  "private": true,
  "name": "c0",
  "displayName": "C0",
  "version": "0.1.0",
  "preview": true,
  "description": "C0 support for VS Code",
  "publisher": "azdavis",
  "author": "Ariel Davis <ariel.z.davis@icloud.com>",
  "repository": {
    "url": "https://github.com/azdavis/c0ls.git",
    "type": "git"
  },
  "scripts": {
    "build": "tsc"
  },
  "main": "./out/main.js",
  "activationEvents": [
    "workspaceContains:**/*.c0"
  ],
  "contributes": {
    "languages": [
      {
        "id": "c0",
        "extensions": [
          ".c0",
          ".h0"
        ],
        "aliases": [
          "C0"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "c0",
        "scopeName": "source.c0",
        "path": "./syntaxes/c0.tmLanguage.json"
      }
    ]
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.27",
    "@types/vscode": "^1.53.0",
    "typescript": "^4.1.5"
  }
}
